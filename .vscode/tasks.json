{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-current-debug",
            "command": "${workspaceFolder}/gdxpp build -t=debug",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-current-release",
            "command": "${workspaceFolder}/gdxpp build -t=release",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-linux-debug",
            "command": "${workspaceFolder}/gdxpp build -p=linux -t=debug",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-linux-release",
            "command": "${workspaceFolder}/gdxpp build -p=linux -t=release",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-web-debug",
            "command": "${workspaceFolder}/gdxpp build -p=web -t=debug",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-web-release",
            "command": "${workspaceFolder}/gdxpp build -p=web -t=release",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-windows-debug",
            "command": "${workspaceFolder}/gdxpp.py build -p=windows -t=debug",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "build-windows-release",
            "command": "${workspaceFolder}/gdxpp.py build -p=windows -t=release",
            "type": "shell",
            "group": "build"
        }
    ]
}